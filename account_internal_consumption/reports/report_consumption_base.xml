<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--
        Punto de entrada del reporte de consumos.
        El modelo del wizard es internal.consumption.report.wizard → variable: docs
    -->
    <template id="report_consumption_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="wizard">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Encabezado del reporte -->
                        <div class="row mb-3">
                            <div class="col">
                                <t t-if="wizard.report_type == 'department'">
                                    <h4 class="mb-0">Consumos Emitidos — Por Departamentos</h4>
                                </t>
                                <t t-elif="wizard.report_type == 'partner'">
                                    <h4 class="mb-0">Consumos Emitidos — Por Contactos Empresa</h4>
                                </t>
                                <t t-else="">
                                    <h4 class="mb-0">Consumos Emitidos — Consolidado</h4>
                                </t>
                                <p class="text-muted mb-0">
                                    Período: <span t-out="wizard.date_from"/> — <span t-out="wizard.date_to"/>
                                </p>
                            </div>
                        </div>
                        <hr class="mt-0"/>

                        <!-- Cuerpo según tipo de reporte -->
                        <t t-if="wizard.report_type == 'department'">
                            <t t-call="account_internal_consumption.report_consumption_by_department"/>
                        </t>
                        <t t-elif="wizard.report_type == 'partner'">
                            <t t-call="account_internal_consumption.report_consumption_by_partner"/>
                        </t>
                        <t t-else="">
                            <t t-call="account_internal_consumption.report_consumption_consolidated"/>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
