<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_department_form_consumption" model="ir.ui.view">
        <field name="name">hr.department.form.consumption</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group string="Consumo Interno"
                       invisible="not is_internal_consumption">
                    <group>
                        <field name="is_internal_consumption" readonly="1"/>
                        <field name="consumption_currency_id" invisible="1"/>
                        <field name="consumption_limit_info"/>
                        <field name="consumed_limit_info"/>
                        <field name="available_limit_info"/>
                    </group>
                    <group>
                        <field name="period_start_info"/>
                        <field name="period_end_info"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
