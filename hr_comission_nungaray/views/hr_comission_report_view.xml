<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="comission_report_view_tree" model="ir.ui.view">
        <field name="name">hr.comission.report.view.tree</field>
        <field name="model">hr.comission.report</field>
        <field name="arch" type="xml">
            <list string="Comisiones" create="0" delete="0" edit="0">
                <field name="pos_orders" column_invisible="1"/>
                <field name="comissioner_id"/>
                <field name="comission_location"/>
                <field name="year"/>
                <field name="month"/>
                <field name="monthly_total" optional="show"/>
                <field name="monthly_cd_amount" optional="show"/>
                <field name="monthly_sd_amount" optional="show"/>
                <field name="comission_amount_cd" optional="show"/>
                <field name="comission_amount_sd" optional="show"/>
                <field name="comission_bono" optional="show"/>
                <field name="comission_amount" sum="Comisión Total" optional="show"/>
            </list>
        </field>
    </record>

    <!-- comission_report search view -->
    <record id="comission_report_view_search" model="ir.ui.view">
        <field name="name">hr.comission.report.view.search</field>
        <field name="model">hr.comission.report</field>
        <field name="arch" type="xml">
            <search string="Buqueda de comisiones">
                <group expand="0" string="Group By">
                    <filter name="year" string="Año" context="{'group_by': 'year'}" />
                    <filter name="month" string="Mes" context="{'group_by': 'month'}" />
                    <filter name="comissioner_id" string="Comisionado" context="{'group_by': 'comissioner_id'}" />
                    <filter name="comission_location" string="Locacion" context="{'group_by': 'comission_location'}" />
                </group>             
            </search>
        </field>
    </record>

    <!-- comission_report pivot view -->
    <record id="comission_report_view_pivot" model="ir.ui.view">
        <field name="name">hr.comission.report.view.pivot</field>
        <field name="model">hr.comission.report</field>
        <field name="arch" type="xml">
            <pivot string="Pivot Comisiones">
                <field name="year" type="col"/>
                <field name="month" type="col"/>
                <field name="comissioner_id" type="col"/>
                <field name="comission_location" type="row"/>
                <field name="comission_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- comission_report action window -->
    <record id="comission_report_action" model="ir.actions.act_window">
        <field name="name">Comisiones</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.comission.report</field>
        <field name="view_mode">list,pivot</field>
        <field name="view_id" ref="comission_report_view_tree"/>
        <field name="search_view_id" ref="comission_report_view_search"/>
        <!-- <field name="context">{'search_default_year': 1, 'search_default_month': 1}</field> -->
    </record>




    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="comission_report_menu_act" name="Reporte de comisiones" parent="account.menu_finance_reports" action="comission_report_action" sequence="100"/>
</odoo>
