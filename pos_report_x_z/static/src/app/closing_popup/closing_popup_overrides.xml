<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.ClosePosPopup" t-inherit-mode="extension">
        
        <xpath expr="//t[@t-set-slot='footer']//div[contains(@class, 'justify-content-between')]" position="attributes">
            <attribute name="class" add="justify-content-center" remove="justify-content-between" separator=" "/>
        </xpath>

        <xpath expr="//button[@t-on-click='() => this.cashMove()']" position="replace">
        </xpath>

        <xpath expr="//button[@t-on-click='cancel']" position="after">
             <button class="button btn btn-secondary" 
                     t-att-class="this.ui.isSmall ? 'w-100' : 'btn-lg'" 
                     t-on-click="() => this.cashMove()">Cash In/Out</button>
        </xpath>

         <xpath expr="//button[@t-on-click='downloadSalesReport']" position="before">
             <button class="button icon btn btn-secondary"
                     t-on-click="printReportZ"
                     t-att-class="this.ui.isSmall ? 'w-100' : 'btn-lg me-2'"
                     title="Download Report Z">
                Reporte Z
                <i t-if="!this.ui.isSmall" class="fa fa-download ms-1" role="img"/>
            </button>
        </xpath>

    </t>
</templates>
