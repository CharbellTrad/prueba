<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_report_x_z.ShiftChangePopup">
        <Dialog title="props.title" footer="false">
            <div class="d-flex flex-column align-items-center justify-content-center p-4 text-center">
                <i class="fa fa-refresh text-primary mb-3" style="font-size: 3rem;"/>
                <div class="fs-3 fw-bold mb-2">
                    <t t-esc="props.title"/>
                </div>
                <div class="fs-5 text-muted mb-4">
                    <t t-esc="props.body"/>
                </div>
                <div class="d-flex gap-2 w-100 justify-content-center">
                    <button class="btn btn-primary btn-lg px-5 py-3 fs-4" t-on-click="confirm">
                        <t t-esc="props.confirmLabel" />
                    </button>
                    <button class="btn btn-secondary btn-lg px-5 py-3 fs-4" t-on-click="cancel">
                        Cancelar
                    </button>
                </div>
            </div>
        </Dialog>
    </t>
</templates>
