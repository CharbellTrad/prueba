<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Herencia de vista Form de sale.order - Agregar campo de proyecto -->
    <record id="sale_order_view_form_inherit_project" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit.project</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Campo de proyecto después del cliente (solo visible si tiene proyectos con productos) -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="show_partner_project" invisible="1"/>
                <field name="location_id"
                       invisible="not show_partner_project"
                       placeholder="Seleccione la ubicación"
                       options="{'no_create': True}"/>

            </xpath>
        </field>
    </record>

</odoo>